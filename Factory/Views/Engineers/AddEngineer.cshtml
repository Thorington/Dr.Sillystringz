@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add a engineer</h2>
<h4>Add an engineer to this machine: @Html.DisplayFor(model => model.Name, new { @class = "form-control", placeholder="Required", required="required", style="width: 300px;"})</h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)
  @Html.Label("Select engineer")
  @Html.DropDownList("EngineerId")
  <input type="submit" value="Save" />
}
<br>
<br>
<p>@Html.ActionLink("⚙️ Back to list", "Index")</p>
<p>@Html.ActionLink("⚙️ Add a Engineer", "AddEngineer", new { id = Model.MachineId })</p>