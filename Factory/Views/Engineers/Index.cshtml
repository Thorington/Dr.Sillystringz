@{
  Layout = "_Layout";
}

@using Factory.Models;

<h2>Engineers</h2>
<hr />
@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
} 
  @foreach(Engineer engineer in Model)
  {
    <dl>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</dl>
  }
<br>
<br>
<p>@Html.ActionLink("⚙️ Add engineer", "Create")</p>
