@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h2>Machines</h2>
<hr />
@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
} 
@foreach (Machine machine in Model)
{
  <dl>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</dl>
}
<br>
<br>
<p>@Html.ActionLink("⚙️ Add new machine", "Create")</p>