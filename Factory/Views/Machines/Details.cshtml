@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>@Html.DisplayFor(model => model.Name)</h2>
<hr />


@if(@Model.JoinEntities.Count == 0)
{
  <p>This machine does not belong to any engineers</p>
}
else
{
  <h4>Engineer(s) the machine is repaired by:</h4>
  <br>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Engineer.Name</li>
  }
  </ul>
}

<br>
<br>

<p>@Html.ActionLink("⚙️ Edit machine", "Edit", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("⚙️ Delete machine", "Delete", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("⚙️ Back to machines", "Index")</p>